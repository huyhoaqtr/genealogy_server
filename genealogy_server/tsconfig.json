{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES6",
    "outDir": "dist", 
    "esModuleInterop": true,
    "strict": true ,
    "skipLibCheck": true ,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "files": ["src/types/index.d.ts"],
  "include": ["src/**/*", "firebase/notification.ts"]
}
